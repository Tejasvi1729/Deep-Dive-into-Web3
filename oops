#include<bits/stdc++.h>
using namespace std;
class borrower{
    string name;
    int amount;
    int previousloans;
    vector<pair<int,int> > record;
    int score;  
public:
    borrower(){
        score=750;
    }
    void score_setter(){
        int t=0;
        for(auto x:record){
            t+=(x.first*x.second);
        }
        while(t>100){
            t=t/10;
        }
        score-=t;
    }
    borrower(string s,int a,int p,vector<pair<int,int> > temp){
        name=s;
        amount=a;
        previousloans=p;
        record=temp;
        score=750;
    }
    void score_setter(){
        int t=0;
        for(auto x:record){
            t+=(x.first*x.second);
        }
        while(t>100){
            t=t/10;
        }
        score-=t;
    }
    void data_getter(){
        cout<<"Enter your name: ";
        getline(cin,name,'\n');
        cout<<endl;
        cout<<"how many loans you have taken upto now? ";
        cin>>previousloans;
        cout<<"enter your details in {amount,penalty in months} format"<<endl;
        for(int i=0;i<previousloans;i++){
            cin>>record[i].first;
            cin>>record[i].second;
        }
        cout<<"Enter amount of money you are applying loan for: "<<endl;
        cin>>amount;
        score_setter();
    }
};
class bank{
    long long int balance;
    int interest_rate;
    
}
